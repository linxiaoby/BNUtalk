<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:background="@drawable/congrats_background" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_above="@+id/user1"
        android:layout_alignRight="@+id/user2"
        android:src="@drawable/congrats" />

    <ImageView
        android:id="@+id/user1"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignTop="@+id/user2"
        android:layout_toLeftOf="@+id/imageView5"
        android:background="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/user2"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_above="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:background="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/switch_match" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:text="you two have been friends"
        android:textSize="20sp" />

    <Button
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:layout_below="@+id/textView6"
        android:background="@drawable/back" />
    <Button
        android:id="@+id/send_message"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/imageView5"
        android:layout_alignRight="@+id/imageView5"
        android:layout_alignTop="@+id/back"
        android:background="@drawable/send_message" />

</RelativeLayout>